{% extends 'layout.html.twig' %}

{% block main %}
<div class="well">
    <h2>Push {{ push }}Â of {{ push.repository }} Github repository</h2>

    <p>Repository : {{ push.repository }}</p>
	<p>Ref : {{ push.ref }}</p>
    <p>Timestamp : {{ push.timestamp | date('d/m/Y') }}</p>
	<p>#Commits : {{ push.commits | length }}</p>
	<p>Before : {{ push.before }}</p>
	<p>After : {{ push.after }}</p>

    <div class="actions">
        <a href="/pushes/" class="btn"><i class="icon-list"></i> Back to list</a>
        <a href="/pushes/{{ push.id }}" data-method="delete" class="btn btn-danger"><i class="icon-remove icon-white"></i> Delete this push</a>
    </div>
</div>
{% endblock %}