{% extends 'layout.html.twig' %}

{% block main %}
<h2>List of command templates</h2>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Command</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for template in templates %}
        <tr>
            <td>{{ template.id }}</td>
            <td>{{ template.name }}</td>
            <td>{{ template.command }}</td>
            <td>
                <a href="/templates/{{ template.id }}/edit" class="btn"><i class="icon-wrench"></i></a>
                <a href="/templates/{{ template.id }}" class="btn"><i class="icon-eye-open"></i></a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="4">No command template have been added yet</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<div class="actions">
    <a href="/templates/new" class="btn btn-primary"><i class="icon-indent-right icon-white"></i> Add a command template</a>
</div>
{% endblock %}